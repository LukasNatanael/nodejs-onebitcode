<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista</title>
</head>
<body>
    <h1><%= list.name %></h1>
    <ul>
        <% list.tasks._tasks.forEach( item => { %>
            <form action="list-<%= list.id %>/task-<%= item.id %>-complete" method="post" id="task-<%= item.id %>">
                <button type="submit" id="task-<%= item.id %>">
                    <li > <%= item.name %> </li>
                </button>
            </form>
        <% }) %>
    </ul>
</body>
</html>